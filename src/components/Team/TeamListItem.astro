---
import type { CollectionEntry } from "astro:content";
import Leader from "./Leader.astro";

export interface Props {
    team: CollectionEntry<"teams">;
}

const { team } = Astro.props;
---

<dl class="border-2 rounded-md border-solid border-bukkomi-blue-dark p-2 mb-2">
    <dt>
        <a class="text-lg font-semibold" href={"/teams/" + team.slug}
            >{team.data.name}</a
        ><ruby class="text-sm">{`(${team.data.kana})`}</ruby>
    </dt>
    <dd class="pl-2 py-1">
        {
            team.data.leader ?
                <>
                    <Leader
                        leader_slug={team.data.leader.slug}
                        role={team.data.leader.role}
                    />
                    率いる
                </>
                : <></>
        }
        {team.data.summary}
    </dd>
</dl>
