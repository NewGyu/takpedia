---
import type { CollectionEntry } from "astro:content";

export interface Props {
    person: CollectionEntry<"people">;
}

const { person } = Astro.props;
---

<dl class="border-2 rounded-md border-solid border-bukkomi-blue-dark p-2 mb-2">
    <dt>
        <a class="text-lg font-semibold" href={"/people/" + person.slug}
            >{person.data.name}</a
        ><ruby class="text-sm">{`(${person.data.kana})`}</ruby>
    </dt>
    <dd class="pl-2 py-1">{person.data.summary}</dd>
</dl>
