---
import type { Character } from "../../codes/Entities";

export interface Props {
    person: Character;
}

const { person } = Astro.props;
---

<dl class="border-2 rounded-md border-solid border-bukkomi-blue-dark p-2 mb-2">
    <dt>
        <a class="text-lg font-semibold" href={"/people/" + person.id}
            >{person.name}</a
        ><ruby class="text-sm">{`(${person.kana})`}</ruby>
    </dt>
    <dd class="pl-2 py-1">{person.summary}</dd>
</dl>
