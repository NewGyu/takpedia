---
import type { CollectionEntry } from "astro:content";
import TermListItem from "./TermListItem.astro";

interface Props {
    chunk: CollectionEntry<"terminologies">;
}

const { data } = Astro.props.chunk;
---

<section>
    <h2 class="text-2xl font-semibold">{data.gyou}</h2>
    <article class="p-2">
        {
            data.items
                .sort((a, b) => a.kana.localeCompare(b.kana))
                .map((t) => <TermListItem term={t} />)
        }
    </article>
</section>
