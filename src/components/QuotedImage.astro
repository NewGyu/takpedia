---
interface Pros {
    src: string;
    alt?: string;
    width?: number;
    height?: number;
    additionalClass?: string[];
}
const { src, alt, width, height, additionalClass } = Astro.props;
const altText = `© 講談社 特攻の拓 ${alt || ""}`;
---

<figure>
    <img
        src={src}
        alt={altText}
        width={width}
        height={height}
        class:list={additionalClass || []}
    />
    <span class="text-xs">{altText}</span>
</figure>
