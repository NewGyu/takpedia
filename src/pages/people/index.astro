---
import DefaultLayout from "../../layouts/DefaultLayout.astro";
import PeopleListItem from "../../components/People/PeopleListItem.astro";
import { getCollection } from "astro:content";

const people = await getCollection("people");
---

<DefaultLayout title="登場人物一覧">
    {
        people
            .sort((a, b) => (a.data.kana < b.data.kana ? -1 : 1))
            .map((p) => <PeopleListItem person={p} />)
    }
</DefaultLayout>
