---
import { getCollection } from "astro:content";
import PeopleLayout from "../../layouts/PeopleLayout.astro";

export async function getStaticPaths() {
    const people = await getCollection("people");
    return people.map((p) => ({
        params: { slug: p.slug },
        props: p,
    }));
}

const { name, kana, summary } = Astro.props.data;
const { Content } = await Astro.props.render();
---

<PeopleLayout name={name} kana={kana} summary={summary}>
    <Content />
</PeopleLayout>
