---
import DefaultLayout from "../../layouts/DefaultLayout.astro";
import TeamListItem from "../../components/Team/TeamListItem.astro";
import { getCollection } from "astro:content";

const teams = await getCollection("teams");
---

<DefaultLayout title="族（チーム）一覧">
    {
        teams
            .sort((a, b) => a.data.kana.localeCompare(b.data.kana))
            .map((t) => <TeamListItem team={t} />)
    }
</DefaultLayout>
